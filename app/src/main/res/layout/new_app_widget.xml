<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WIdget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WIdget.AppWidgetContainer">



    <ImageButton
    android:id="@+id/imageButton_test"
    style="@style/Widget.WIdget.AppWidget.InnerView"
        android:backgroundTint="@color/cardview_dark_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="8dp"
    android:contentDescription="@string/appwidget_text"
    android:src="@android:drawable/btn_star"
    android:textSize="24sp"
    android:textStyle="bold|italic" />


    <ImageButton
        android:id="@+id/imageButton_test_2"
        style="@style/Widget.WIdget.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:contentDescription="@string/appwidget_text"
        android:src="@android:drawable/btn_star"
        android:textSize="24sp"
        android:textStyle="bold|italic" />


</RelativeLayout>

